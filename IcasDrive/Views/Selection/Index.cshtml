@model IcasDrive.Models.SelectionViewModel
@{
    ViewBag.Title = "Final Selection";
}
@using (Html.BeginForm("SendEmailAsync", "Selection", FormMethod.Post))
{
<div class="row">
    <br />
    <br />
    @if (Model.ExamLinks != null)
    {
    <div class="row">
        <div class="col-md-5 col-md-offset-2">
            <table class="table-responsive table-hover">
                <thead>Reqested Papers</thead>
                @for (int count = 0; count < Model.ExamLinks.Count; count++)
                {
                    <tr>
                        <td>@Model.ExamLinks[count].PaperName</td>
                        <td>@Html.HiddenFor(m => m.ExamLinks[count].PaperUrl)</td>
                        <td>@Html.HiddenFor(m => m.ExamLinks[count].PaperName)</td>
                        <td>@Html.HiddenFor(m => m.ExamLinks[count].FileId)</td>
                    </tr>
                }
            </table>
        </div>
    </div>
    }
    <br />
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.CustomerName, new { @class = "control-label col-sm-3 col-md-2" })
        <div class="col-sm-9 col-md-10">
            @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.EmailAddress, new { @class = "control-label col-sm-3 col-md-2" })
        <div class="col-sm-9 col-md-10">
            @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <br />
    <div class="btn-toolbar">
        <button class="btn-primary btn" type="submit">Send Email</button>
    </div>
</div>
}

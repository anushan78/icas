@model IcasDrive.Models.SubjectViewModel
@{
    ViewBag.Title = "Add Subject";
}
@using (Html.BeginForm("Subject", "Home", FormMethod.Post))
{
    <div class="row">
        <br />
        <br />
        <div class="form-group">
            @Html.LabelFor(m => m.SubjectName, new { @class = "control-label col-sm-3 col-md-2" })
            <div class="col-sm-9 col-md-10">
                @Html.TextBoxFor(m => m.SubjectName, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <span class="control-label col-sm-3 col-md-2"></span>
            <div class="col-sm-9 col-md-10">
                <button class="btn-default btn" type="submit">Save</button>
            </div>
        </div>
    </div>
}

